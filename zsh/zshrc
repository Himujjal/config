 source ~/.zshrc
 cd $curr
}

alias cdsaanvi="cd ~/projects/saanvi/Saanvi"

function zbd() {
    echo "Testing zig function $1"

    cmd_args="-freference-trace=16"

    if [ -n "$1" ]; then
      cmd_args="$cmd_args -Dtest-filter=\"$1\""
    fi
    watchexec -w src -w build.zig -r "clear && echo 'Running test: $1' && zig build test $cmd_args"
}

