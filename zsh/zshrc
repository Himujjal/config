function confirm() {
    echo -n "Do you absolutely want to run $*? Remember why you put this in the first place...... [N/y] "
    read REPLY
    echo
    if test "$REPLY" = "y" -o "$REPLY" = "Y" -o "$REPLY" = "yes" -o "$REPLY" = "Yes" -o "$REPLY" = "YES"; then
        "$@"
    else
        echo "Cancelled by user"
    fi
}
