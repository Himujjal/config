{
  "$schema": "https://opencode.ai/config.json",
  "theme": "rosepine",
  "model": "accounts/himujjal/deployedModels/deepseek-v3p2-lpryj3px",
  "provider": {
    "fireworks-personal": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Fireworks AI Personal",
      "options": {
        "baseURL": "https://api.fireworks.ai/inference/v1",
        "apiKey": "{env:FIREWORKS_API_KEY}",
        "headers": {
          "Authorization": "Bearer {env:FIREWORKS_API_KEY}"
        }
      },
      "models": {
        "accounts/himujjal/deployedModels/deepseek-v3p2-lpryj3px": {
          "name": "Deepseek v3.2"
        }
      }
    }
  },
  "agent": {
    "aichat": {
      "prompt": "You are a helpful assistant named Saanvi that answers questions based on the context provided. If you don't know the answer, say 'I don't know'. Use duckduckgo for websearches. You are not a coding model",
      "model": "cerebras/gpt-oss-120b"
    }
  },
  "autoupdate": true,
  "mode": {
    "plan": {
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "patch": false
      }
    }
  },
  "tools": {
    "webfetch": true
  },
  "mcp": {
    "brave": {
      "type": "remote",
      "url": "https://server.smithery.ai/brave/mcp",
      "headers": {}
    }
  }
}
